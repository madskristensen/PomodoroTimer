<UserControl x:Class="Pomodoro.TimerToolWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
             xmlns:local="clr-namespace:Pomodoro"
             local:VsTheme.UseVsTheme="True"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             Name="MyToolWindow">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label Margin="10" 
                   Name="lblTime"
                   HorizontalAlignment="Center"
                   FontSize="40">00:20:00</Label>
            
            <Button Content="Start" Click="button1_Click" Name="btnStartStop"/>
            <Button Content="Reset" Click="btnReset_Click" Name="btnReset"/>
        </StackPanel>
    </Grid>
</UserControl>
